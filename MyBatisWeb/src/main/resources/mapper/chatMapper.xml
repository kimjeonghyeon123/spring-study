<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.earth.korea.dao.ChatMapper">
	<sql id="selectFromChat">
		SELECT id, sender_id, content, reg_date
		FROM t_chat	
	</sql>
	
	<select id="selectAll" resultType="ChatDto">
		<include refid="selectFromChat" />
		ORDER BY reg_date, id
	</select>
	
	<insert id="insert" parameterType="ChatDto">
		INSERT INTO t_chat(sender_id, content)
		VALUES(#{sender_id}, #{content})
	</insert>
</mapper>