<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.earth.jeonghyeonkim.dao.DangMemberMapper">
	
	<!-- email로 멤버 정보 불러올 때 사용 -->
	<select id="select" parameterType="String" resultType="DangMemberDto">
		SELECT email, pwd, name
		FROM dang_member
		WHERE email = #{email}
	</select>
	
	<!-- 멤버 새로 만들 때 사용 -->
	<insert id="insert" parameterType="DangMemberDto">
		INSERT INTO dang_member(email, pwd, name)
		VALUES(#{email}, #{pwd}, #{name})
	</insert>
		
	<!-- email로 멤버 이름 불러올 때 사용 -->
	<select id="selectMemberName" parameterType="String" resultType="String">
		SELECT name
		FROM dang_member
		WHERE email = #{email}
	</select>
	
</mapper>